<% tasks.each do |task| %>
  <div class="task-card d-flex justify-content-between pt-2 pb-3" data-controller="checkbox" data-checkbox-update-url="<%= task_path(task)%>">
    <div class="task-card-info flex-grow-1">
      <h3 class="list-title-font"><%= task.title %></h3>
      <p class="task-description"><%= task.description %></p>
    </div>
    <div class="d-flex align-items-center done-checkbox">
      <%= simple_form_for(task) do |f| %>
        <%= f.input :completed, input_html: { class: 'class名' } %>
        <%= f.input :important %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="date-dots d-flex flex-column align-items-center">
      <small class="flex-grow-1"><%= task.created_at.strftime("%A, %b %d") %></small>
      <div class="dots">
        <i class="fa-solid fa-ellipsis-vertical flex-grow-1"></i>
      </div>
    </div>
  </div>
<% end %>
